<%= turbo_stream_from "endpoints" %>
<section class="container px-4 mx-auto">
  <%= form_with model: @endpoint, class: "mb-3 xl:flex xl:justify-between" do |form|  %>
    <%= form.text_field :name, placeholder: :name, class: "rounded" %>
    <%= form.text_field :url, placeholder: :url, class: "rounded" %>
    <%= form.text_field :max_response_time, placeholder: :max_response_time, class: "rounded" %>
    <%= form.text_field :period, placeholder: :request_period, class: "rounded" %>
    <%= form.submit :add, class: "focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600
   px-6 py-3 bg-indigo-700 hover:bg-indigo-600 focus:outline-none rounded text-white text-sm" %>
  <% end %>
  <div class="flex flex-col">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden border border-gray-700 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 bg-gray-800">
            <tr>
              <th scope="col" class="py-3.5 px-4 text-sm font-normal text-left rtl:text-right text-gray-400">
                <div class="flex items-center gap-x-3">
                  Endpoint
                </div>
              </th>

              <th scope="col" class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-400">
                Last checked
              </th>

              <th scope="col" class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-400">
                Status
              </th>

              <th scope="col" class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-400">
                Response Time
              </th>

              <th scope="col" class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-400">
                History (Last 7 Days)
              </th>

              <th scope="col" class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-400">
                Actions
              </th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-700 bg-gray-900" id="endpoints">
              <%= render partial: "endpoint", collection: @endpoints %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
